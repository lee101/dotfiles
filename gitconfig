[user]
	name = Lee Penkman
	email = leepenkman@gmail.com
[push]
	default = current
[color]
	ui = auto
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    ds = diff --staged
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
    ls = ls-files
    unstage = reset HEAD

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/lee.penkman/.gitignore_global
[credential]
	helper = cache --timeout=360000000
[difftool "sourcetree"]
	cmd = charm merge $LOCAL $REMOTE $BASE
	path = 
[mergetool "sourcetree"]
	cmd = charm merge $LOCAL $REMOTE $BASE
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	template = /Users/lee.penkman/.stCommitMsg
