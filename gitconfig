	email = leepenkman@gmail.com
[push]
	default = upstream
	default = simple
	default = current
	default = upstream
[color]
	ui = true
	diff = auto
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    ds = diff --staged
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
    ls = ls-files
    unstage = reset HEAD

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
	pushskip = "\\!f() { SKIP_TESTS=1 git push --no-verify \"$@\"; }; f"
	pullpush = "\\!f() { git pull --rebase=false && git push \"$@\"; }; f"
	forcesync = "\\!f() { git pull --rebase=false && SKIP_TESTS=1 git push --no-verify \"$@\"; }; f"
	yolo = "\\!f() { git add -A && git commit -m \"${1:-Quick sync}\" --no-verify && git pull --rebase=false --strategy=ours --no-edit && SKIP_TESTS=1 git push --no-verify; }; f"
	smartpush = "\\!f() { git stash && git pull --rebase=false && git stash pop && SKIP_TESTS=1 git push --no-verify \"$@\"; }; f"
	unpushed = \\!git log @{u}.. --oneline 2>/dev/null || git log origin/main..HEAD --oneline
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
