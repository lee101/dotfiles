[alias]
    # Branch and push status
    bs = !git branch -vv
    unpushed = !git log @{u}.. --oneline 2>/dev/null || git log origin/main..HEAD --oneline

    # Smart push that sets upstream if needed
    pshu = !sh -c 'git push -u origin $(git branch --show-current) ${1:+--no-verify}' -
    pshuf = !sh -c 'SKIP_TESTS=1 git push -u origin $(git branch --show-current) --no-verify' -

    # Check what would be pushed
    topush = !git diff @{u}.. --stat 2>/dev/null || git diff origin/main..HEAD --stat

    # Create and push branch in one go
    newbranch = !sh -c 'git checkout -b "$1" && git push -u origin "$1"' -

    # Smart status that shows upstream info
    st = status -sb
    stu = !sh -c 'git status -sb; echo ""; git branch -vv | grep "^*"' -
