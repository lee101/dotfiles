#!/bin/bash
# JavaScript error checker wrapper script

# Set default Chrome profile path if not set
if [ -z "$CHROME_PROFILE_PATH" ]; then
    export CHROME_PROFILE_PATH="$HOME/.config/google-chrome/Default"
fi

# Set the Chrome profile export path
export CHROME_PROFILE_PATH="/home/lee/code/dotfiles/tools/chrome_profiles_export"

# Let the Python script handle help and arguments

# Run directly using Python instead of uvx to avoid caching issues
cd /home/lee/code/dotfiles/tools/js_error_checker
exec python -m js_error_checker.main "$@"